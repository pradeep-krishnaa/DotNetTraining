@model IEnumerable<BugTracker.MVC.Models.BugViewModel>

@{
    ViewData["Title"] = "Bugs List";
}

<h2>Bugs</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Status</th>
            <th>Created At</th>
            <th>Project Id</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bug in Model)
        {
            <tr>
                <td>@bug.Title</td>
                <td>@bug.Status</td>
                <td>@bug.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@bug.ProjectId</td>
                <td>
                    <a asp-action="Details" asp-route-id="@bug.Id" class="btn btn-sm btn-primary">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
