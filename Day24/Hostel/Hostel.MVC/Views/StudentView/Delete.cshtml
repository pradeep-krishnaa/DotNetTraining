@model Hostel.MVC.Models.StudentViewModel

@{
    ViewData["Title"] = "Delete Student";
}

<h2>Are you sure you want to delete this student?</h2>

<dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">@Model.StudentId</dd>

    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.StudentName</dd>

    <dt class="col-sm-2">Department</dt>
    <dd class="col-sm-10">@Model.StudentDepartment</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.StudentId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
